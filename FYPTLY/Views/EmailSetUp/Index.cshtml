@model FYLProjectTLY.Models.gmail

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        @using (Html.BeginForm("Index", "EmailSetUp", FormMethod.Post, new { enctype = "multipart/form-data" } ))
            {
            <center>
                <h1> How To Configure SMTP of Gmail</h1>
                <h2> Using MVC = 5 (asp.net) </h2>
                <hr />
                <table>
                    <tr>
                        <td style="width: 80px">
                            To:
                        </td>
                        <td>@Html.TextBoxFor(model=>model.To)</td>
                    </tr>
                    <tr>
                        <td>
                            Subject:
                        </td>
                        <td>
                        <td>@Html.TextBoxFor(model => model.Subject)</td> 
                    </tr>
                   <tr>
                       <td valign="top">
                           Body:
                       </td>
                       <td>@Html.TextAreaFor(model => model.Body, new { rows ="15", cols="25"})</td>
                       </tr>
                    <tr>
                        <td>
                            <input type="submit" value="Send" />
                        </td>
                        </table>
</center>
        
        }
        </div>
</body>
</html>
